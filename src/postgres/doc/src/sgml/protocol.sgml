   <varlistentry id="protocol-message-formats-AuthenticationGSS">
    <term>AuthenticationGSS (B)</term>
    <listitem>
     <variablelist>
      <varlistentry>
       <term>Byte1('R')</term>
       <listitem>
        <para>
         Identifies the message as an authentication request.
        </para>
       </listitem>
      </varlistentry>
      <varlistentry>
       <term>Int32(8)</term>
       <listitem>
