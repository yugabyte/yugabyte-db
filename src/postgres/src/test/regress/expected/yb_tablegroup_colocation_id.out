--
-- Test colocated tables with indexes.
--
CREATE TABLE tg1_table1(
  v1 int,
  v2 int UNIQUE WITH (colocation_id=20002),
  v3 text
) WITH (colocation_id=20001) TABLEGROUP tg1;
INSERT INTO tg1_table1 VALUES (1, 1, 'v1'),  (1, 1, 'v1'); -- Fail
