--
-- LINE
-- Infinite lines
--
--DROP TABLE LINE_TBL;
CREATE TABLE LINE_TBL (id int primary key, s line);
INSERT INTO LINE_TBL VALUES (1, '{1,-1,1}');
INSERT INTO LINE_TBL VALUES (2, '(0,0),(6,6)');
INSERT INTO LINE_TBL VALUES (3, '10,-10 ,-5,-4');
INSERT INTO LINE_TBL VALUES (4, '[-1e6,2e2,3e5, -4e1]');
INSERT INTO LINE_TBL VALUES (5, '(11,22,33,44)');
INSERT INTO LINE_TBL VALUES (6, '[(1,0),(1,0)]');
ERROR:  invalid line specification: must be two distinct points
LINE 1: INSERT INTO LINE_TBL VALUES (6, '[(1,0),(1,0)]');
                                        ^
-- horizontal
INSERT INTO LINE_TBL VALUES (7, '[(1,3),(2,3)]');
-- vertical
INSERT INTO LINE_TBL VALUES (8, '[(3,1),(3,2)]');
-- bad values for parser testing
INSERT INTO LINE_TBL VALUES (100, '{0,0,1}');
ERROR:  invalid line specification: A and B cannot both be zero
LINE 1: INSERT INTO LINE_TBL VALUES (100, '{0,0,1}');
                                          ^
INSERT INTO LINE_TBL VALUES (100, '(3asdf,2 ,3,4r2)');
ERROR:  invalid input syntax for type line: "(3asdf,2 ,3,4r2)"
LINE 1: INSERT INTO LINE_TBL VALUES (100, '(3asdf,2 ,3,4r2)');
                                          ^
INSERT INTO LINE_TBL VALUES (100, '[1,2,3, 4');
ERROR:  invalid input syntax for type line: "[1,2,3, 4"
LINE 1: INSERT INTO LINE_TBL VALUES (100, '[1,2,3, 4');
                                          ^
INSERT INTO LINE_TBL VALUES (100, '[(,2),(3,4)]');
ERROR:  invalid input syntax for type line: "[(,2),(3,4)]"
