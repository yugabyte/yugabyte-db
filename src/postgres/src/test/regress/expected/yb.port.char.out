--
-- Also test "char", which is an ad-hoc one-byte type.  It can only
-- really store ASCII characters, but we allow high-bit-set characters
-- to be accessed via bytea-like escapes.
--
SELECT 'a'::"char";
 char 
------
 a
(1 row)

SELECT '\101'::"char";
 char 
------
 A
(1 row)

SELECT '\377'::"char";
