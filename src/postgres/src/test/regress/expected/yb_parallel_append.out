-- joins union
explain (costs off)
select * from t, t1 where t.k = t1.k union select * from t, t2 where t.k = t2.k;
               QUERY PLAN
-----------------------------------------
 HashAggregate
   Group Key: t.k, t.v, t1.k, t1.v
   ->  Append
         ->  Hash Join
               Hash Cond: (t.k = t1.k)
               ->  Seq Scan on t
               ->  Hash
                     ->  Seq Scan on t1
         ->  Hash Join
               Hash Cond: (t_1.k = t2.k)
               ->  Seq Scan on t t_1
               ->  Hash
                     ->  Seq Scan on t2
(13 rows)

