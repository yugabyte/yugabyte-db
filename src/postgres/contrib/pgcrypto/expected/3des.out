-- 10 bytes key
select encrypt('foo', '0123456789', '3des');
      encrypt       
--------------------
 \xd2fb8baa1717cb02
(1 row)

-- 22 bytes key
select encrypt('foo', '0123456789012345678901', '3des');
      encrypt       
--------------------
